<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.canvas.Canvas?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>

<BorderPane fx:id="gameContainer" prefHeight="800.0" prefWidth="1000.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.zunf.tankbattleclient.controller.GameController">
   <center>
      <StackPane alignment="CENTER">
         <Canvas fx:id="gameCanvas" height="800.0" width="800.0" />
         <!-- 菜单框 -->
         <VBox fx:id="menuBox" alignment="CENTER" spacing="15.0" styleClass="menu-box" visible="false" managed="false">
            <Label text="菜单" styleClass="menu-title" />
            <Label fx:id="leaveGameLabel" text="离开游戏" styleClass="menu-item" onMouseClicked="#onLeaveGameClick" />
         </VBox>

         <!-- 游戏结束弹窗 -->
         <VBox fx:id="gameOverBox" alignment="CENTER" spacing="20.0" styleClass="game-over-box" visible="false" managed="false">
            <Label fx:id="gameOverTitle" text="游戏结束" styleClass="game-over-title" />
            <VBox alignment="CENTER" spacing="10.0">
               <Label fx:id="gameOverMessage" text="胜负未定" styleClass="game-over-message" />
               <Label fx:id="gameOverCountdown" text="5秒后返回大厅..." styleClass="game-over-countdown" />
            </VBox>
         </VBox>
      </StackPane>
   </center>
</BorderPane>



